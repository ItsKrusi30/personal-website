---
import page from '../layouts/page.astro';
import "../styles/global.css";
import { Icon } from 'astro-iconify';
import Layout from "../layouts/page.astro"
import Header from '../components/Header.astro';
---

<Layout>
	<Header />
		<div class=" flex flex-col items-center justify-center bg-gray-50 px-4">
			<div class="max-w-xl w-full text-center">
				<img src="/42.png" alt="Kristian Huisman" class="mx-auto w-24 h-24 sm:w-32 sm:h-32 rounded-full shadow-lg mb-6 border-4 border-white">
				<h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Kristian Huisman</h1>
				<h2 class="text-lg sm:text-xl text-gray-600 mb-6">Software Developer</h2>
				<p class="text-gray-700 mb-8 text-base sm:text-lg">
					Hi, I'm Kristian Huisman, a passionate software developer focused on building clean, efficient, and user-friendly web applications. I enjoy working with modern technologies and am always eager to learn and take on new challenges.
				</p>
				<div class="flex flex-col sm:flex-row justify-center items-center gap-3 w-full">
					<a href="mailto:huismankristian@gmail.com" target="_blank" class="flex items-center justify-center px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition w-auto" aria-label="E-mail">
						<Icon name="mdi:email" class="h-5 w-5 mr-2" />
						E-mail
					</a>
					<a href="https://github.com/ItsKrusi30" target="_blank" class="flex items-center justify-center px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-900 transition w-auto" aria-label="GitHub">
						<Icon name="mdi:github" class="h-5 w-5 mr-2" />
						GitHub
					</a>
					<a href="https://www.linkedin.com/in/kristian-huisman/" target="_blank" class="flex items-center justify-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition w-auto" aria-label="LinkedIn">
						<Icon name="mdi:linkedin" class="h-5 w-5 mr-2" />
						LinkedIn
					</a>
				</div>
			</div>
		</div>
</Layout>
    